<style>
    /* General Reset */
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: Roboto, sans-serif;
    }

    /* Header Styling */
    header {
        width: 100%;
        display: flex;
        flex-wrap: wrap;
        align-items: center;
        justify-content: space-between;
        padding: 20px;
        background-color: white;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        position: fixed;
        z-index: 1000;
    }

    .logo {
        display: flex;
        align-items: center;
    }

    .logo img {
        height: 50px;
        margin-right: 10px;
    }

    nav {
        display: flex;
        gap: 10px;
        flex-wrap: wrap;
    }

    nav a {
        font-size: 18px;
        text-decoration: none;
        color: black;
        font-weight: 400;
        border: 1px solid rgb(129, 117, 117);
        border-radius: 7px;
        padding: 5px 10px;
    }

    nav a.signup-button {
        background-color: black;
        color: white;
        font-weight: bold;
        padding: 5px 15px;
    }

    nav a.signup-button:hover {
        background-color: #333;
    }

    nav a:hover {
        color: #2046cf;
    }

    body {
        display: flex;
        justify-content: center;
        margin: 0;
        padding: 0;
        background-color: #f5f5f5;
    }

    /* Main Container */
    .main-container {
        width: 100%;
        max-width: 1150px;
        margin-top: 20px;
        padding-top: 100px;
    }

    /* Sign-Up Section */
    .signup-section {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
        padding: 40px;
        background-color: #cce5e3;
        border-radius: 20px;
        margin-top: 20px;
    }

    .signup-text {
        flex: 1;
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        padding: 10px;
        align-self: center;
        margin-left: 10px;
    }

    .signup-text h2 {
        margin-bottom: 20px;
        font-size: 32px;
        font-weight: 800;
        text-align: left;
        word-spacing: 0.2cm;
        align-self: center;
    }

    .signup-text button {
        background-color: black;
        color: white;
        border: none;
        padding: 12px 30px;
        font-size: 18px;
        margin-top: 20px;
        cursor: pointer;
        border-radius: 8px;
        align-self: center;
    }

    .signup-text p {
        font-size: 16px;
        margin-top: 15px;
        letter-spacing: 0.01cm;
        word-spacing: 0.1cm;
    }

    .signup-text a {
        color: black;
        text-decoration: none;
        font-weight: bold;
    }

    .signup-text a:hover {
        color: #2046cf;
    }

    .signup-images {
        display: flex;
        flex-direction: column;
        gap: 10px;
        padding: 10px;
        
    }

    .signup-images .top-images,
    .bottom-image {
        display: flex;
        gap: 10px;
        justify-content: center;
    }

    .signup-images img {
        width: 150px;
        height: 150px;
        border-radius: 30%;
        object-fit: cover;

    }

    /* Action Zone Section */
    .action-section {
        display: flex;
        gap: 20px;
        margin-top: 20px;
    }

    .action-zone {
        border-radius: 20px;
        width: 60%;
        position: relative;
    }

    .dashboardframe img {
        width: 100%;
        border-radius: 20px;
    }

    .dashboardpic img {
        width: 90%;
        position: absolute;
        top: 80px;
        left: 40px;
        z-index: 1;
    }

    .actionzone-button {
        position: absolute;
        bottom: 58px;
        left: 50%;
        transform: translateX(-50%);
        z-index: 2;
        padding: 10px 20px;
        border-radius: 5px;
        cursor: pointer;
    }

    .goals-menu {
        background-color: #ffecb3;
        padding: 35px;
        display: flex;
        flex-direction: column;
        gap: 25px;
        border-radius: 20px;
        width: 50%;
    }

    .goals-menu a {
        text-decoration: none;
        color: black;
        font-size: 23px;
        text-align: center;
        padding: 20px;
    }
    .smallframe {
        align-self: center;

    }
    /* Terms and Conditions Section */
    .terms-section {
        background-color: #333;
        color: rgb(221, 209, 209);
        padding: 20px 30px;
        border-radius: 30px;
        margin-top: 30px;
        max-width: 1150px;
    }

    .terms-section p:first-of-type {
        margin-bottom: 10px;
         margin-top: 10px;
        font-size: 20px;
        font-weight: bold;
    }

    .terms-section p:last-of-type {
        margin-bottom: 10px;
       
        font-size: 18px;
        letter-spacing: 0.01cm;
        word-spacing: 0.1cm;
        line-height: 1.5;
    }
/* Media Queries for Responsiveness */
@media (max-width: 768px) {
    header {
        padding: 10px;
        flex-direction: column;
        align-items: flex-start;
    }

    nav {
        flex-direction: column;
        align-items: flex-start;
        gap: 5px;
        margin-top: 10px;
    }

    nav a {
        font-size: 16px;
    }

    .signup-section {
        display: flex;
        justify-content: space-between;
        padding: 50px 20px; /* Reduce horizontal padding */
        background-color: #cce5e3;
        border-radius: 20px;
        margin-top: 20px;   
    }

    .signup-text h2 {
        font-size: 24px;
        text-align: center;
    }

    .signup-text p {
        text-align: center;
    }

    .signup-images img {
        width: 120px;
        height: 120px;
    }

    .action-section {
        flex-direction: column;
        align-items: center;
        gap: 20px;
    }

    .action-zone {
        width: 100%; /* Ensure the action zone takes full width on smaller screens */
        position: relative;
        padding: 20px;
    }

    .goals-menu {
        width: 100%; /* Make sure the goals menu takes full width */
        margin-top: 20px;
        background-color: #ffecb3;
        padding: 20px;
    }

    /* Actionzone button adjustments */
    .actionzone-button {
        position: relative;
        z-index: 2;
        padding: 10px 20px;
        border-radius: 5px;
        cursor: pointer;
        font-size: 28px; /* Adjust font size */
        margin-top: 20px; /* Add margin above the button */
        width: 100%; /* Make the button take full width on smaller screens */
        text-align: center; /* Center text */
        box-sizing: border-box;
    }

    .goals-menu a {
        font-size: 18px;
        padding: 15px;
    }

    .smallframe img {
        width: 100%; /* Ensure the image fits within the container */
    }
}

@media (max-width: 480px) {
    nav a {
        font-size: 14px;
        padding: 5px 10px;
    }

    .signup-text h2 {
        font-size: 20px;
    }

    .signup-text button {
        font-size: 16px;
        padding: 8px 20px;
    }

    .goals-menu {
        padding: 15px;
    }

    .actionzone-button {
        font-size: 26px; /* Further reduce font size for even smaller screens */
    }
}


</style>
