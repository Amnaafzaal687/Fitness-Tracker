<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Suggested Plan</title>
<style> 
    /* Reset and General Styling */
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: Roboto, sans-serif;
    }
    body {
        margin: 0;
        padding: 0;
    }

    /* Header Styling */
    header {
        width: 100%;
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 20px 50px;
        background-color: white;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        position: fixed;
        top: 0;
        left: 0;
        z-index: 1000;
    }
    .logo {
        display: flex;
        align-items: center;
    }
    .logo img {
        height: 50px;
        margin-right: 10px;
    }
    nav {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
    }
    nav a {
        font-size: 16px;
        margin: 0 15px;
        text-decoration: none;
        color: black;
        font-weight: 400;
        border: 1px solid rgb(129, 117, 117);
        border-radius: 7px;
        padding: 5px 10px;
    }
    nav a:hover {
        color: #2046cf;
    }
    nav a[style] {
        color: white;
        background-color: #0a0505;
        border-radius: 7px;
    }

    /* Slideshow Full Background */
    .slideshow-container {
        position: fixed;
        top: 0;
        left: 0;
        width: 100vw;
        height: 100vh;
        overflow: hidden;
        z-index: -1; /* Push to background */
    }

    .slideshow-container img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        position: absolute;
        top: 0;
        left: 0;
        opacity: 0;
        transition: opacity 1.5s ease-in-out;
    }

    .slide.active {
        opacity: 1;
    }.workout-name {
    position: absolute;
    bottom: 20px;
    right: 20px;
    background-color: rgba(0, 0, 0, 0.7); /* Semi-transparent background */
    color: white;
    padding: 10px 15px;
    border-radius: 5px;
    font-size: 18px;
    font-weight: bold;
    text-align: right;
    z-index: 1;
}

    
    /* Content Section */
    .content-section {
        position: relative;
        z-index: 1;
        margin-top: 200px; /* Offset header */
        padding: 20px;
        border-radius: 10px;
        width: 80%;
        text-align: left;
        margin-left: auto;
        margin-right: auto; 
    
    }

    .content-section h1, .content-section h2 {

        color: rgba(0, 0, 0, 0.6);
        margin-bottom: 20px;
        margin-left: 100px;
    }

    /* Card Section Styling */
    .card-container {
        display: flex;
        justify-content: center;
        flex-wrap: wrap;
        gap: 40px;
        margin-top: 20px;
    }
   .card {
    background-color: rgba(13, 48, 64, 0.85); 
    color: white; 
    padding: 30px;
    border-radius: 10px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2); 
    width: 300px;
    text-align: center;
    transition: transform 0.3s ease, box-shadow 0.3s ease; 
}

    .card:hover {
    transform: scale(1.05); /* Slight zoom effect on hover */
    box-shadow: 0 6px 10px rgba(0, 0, 0, 0.3); /* More pronounced shadow */
    }


    .card h3 {
    margin-bottom: 10px;
    font-size: 18px;
    color: #d4af37; /* Accent color */
    }

    .card p {
        font-size: 16px;
        color: #f9f9f9;
        margin: 5px 0;
        text-align: left;
    }
</style>
</head>
<body>
<!-- Header Section -->
<header>
    <div class="logo">
        <img src="/logo.png" alt="FitStride Logo">
        <nav>
            <a href="/auth/dashboard">Home</a>
            <a href="/suggestedplan" style="color: white; background-color: #0a0505;">Suggested Plan</a>
            <a href="/logaworkoutsession">Log a Workout Session</a>
            <a href="/auth/logdailyactivity">Log Daily Activity</a>
            <a href="/auth/progress">Progress</a>
            <a href="/auth/history">History</a>
            <a href="/auth/checkGoalStatus">Fitness Goals</a>
        </nav>
    </div>
</header>

<!-- Slideshow Full Background -->
<div class="slideshow-container">
    <img src="/single.jpg" class="slide active" alt="Dumbbell Squats">
    <img src="/glute.jpg" class="slide" alt="Romanian Deadlifts">
    <img src="/deadlift.jpg" class="slide" alt="Bench Press">
    <div class="workout-name" id="workout-name">Dumbbell Squats</div>
</div>

<!-- Content Section -->
<div class="content-section">
    <div class="heading-card">
    <h1>Legs Workout</h1>
    <h2>Level: Beginner</h2>
    </div>
<!-- Cards Section -->

<div class="card-container">
    <div class="card">
        <h3>3 sets of 12 reps each</h3>
        <p>1. Step Ups</p>
        <p>2. Jumping Jacks</p>
        <p>3. Leg Circles</p>
        <p>4. Hip Thrust</p>
    </div>
    <div class="card">
        <h3>3 sets of 12 reps each</h3>
        <p>1. Sumo Squats</p>
        <p>2. Side Lunges</p>
        <p>3. Knee Tucks</p>
        <p>4. Air Squats</p>
    </div>
    <div class="card">
        <h3>3 sets of 12 reps each</h3>
        <p>1. Glute Bridges</p>
        <p>2. Split Squats</p>
        <p>3. Box Jumps</p>
        <p>4. Plank Leg Lifts</p>
    </div>
</div>
</div>

<script>
let slideIndex = 0;
const slides = document.querySelectorAll('.slide');
const workoutName = document.getElementById('workout-name');
const workoutNames = ["Single Leg Deadlifts", "Glute Raises", "Romanian Deadlift"];

function showSlides() {
    slides.forEach((slide, index) => {
        slide.classList.remove('active');
    });
    slideIndex = (slideIndex + 1) % slides.length;
    slides[slideIndex].classList.add('active');
    workoutName.textContent = workoutNames[slideIndex];
    setTimeout(showSlides, 3000); 
}

showSlides();
</script>
</body>
</html>
