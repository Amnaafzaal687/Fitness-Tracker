<style> 
    /* Reset and General Styling */
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: Roboto, sans-serif;
    }
    body {
        background-color: #f5f5f5;
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        flex-direction: column;
    }

    /* Header Styling */
    header {
        width: 100%;
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 20px 50px;
        background-color: white;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        position: fixed;
        top: 0;
        left: 0;
        z-index: 1000;
    }
    .logo {
        display: flex;
        align-items: center;
    }
    .logo img {
        height: 50px;
        margin-right: 10px;
    }
    nav {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
    }
    nav a {
        font-size: 16px;
        margin: 0 15px;
        text-decoration: none;
        color: black;
        font-weight: 400;
        border: 1px solid rgb(129, 117, 117);
        border-radius: 7px;
        padding: 5px 10px;
    }
    nav a:hover {
        color: #2046cf;
    }
    body h1 {
        margin-top: 100px; /* Adjusted for fixed header */
        text-align: center;
        padding: 20px;
        color: #333;
    }

    /* Form Container Styling */
    .form-container {
        width: 417px;
        background-color: #CCE5E3;
        padding: 50px;
        border-radius: 5px;
        text-align: center;
    }

    .form-container label {
        display: block;
        text-align: left;
        margin: 15px 0 5px;
        color: #555;
    }

    .form-container input {
        width: 100%;
        padding: 10px;
        margin-bottom: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
    }

    .form-container button {
        padding: 10px 20px;
        background-color: black; /* Button background as black */
        color: white;
        font-weight: bold;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        width: 100%;
        margin-top: 20px;
        font-size: 16px;
    }

    .form-container button:hover {
        background-color: #555;
    }
    #activity {
        width: 100%;
        padding: 10px;
        margin-bottom: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
        height: 42px;
        color: #797676;
    }
    #start {
        color: #797676;
        width: 100%;
        padding: 10px;
        margin-bottom: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
        height: 42px;
    }

    .message-container {
    margin-bottom: 20px;
    text-align: center;
    }

    .error-message {
        color: red;
        font-size: 18px;
        font-weight: bold;
        margin: 10px 0;
        padding: 10px;
        background-color: #ffe6e6; /* Light red background */
        border: 1px solid red;    /* Red border */
        border-radius: 5px;
    }
</style>
<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Achieve Your Best</title>
</head>
<body>
<!-- Header Section -->
<header>
    <div class="logo">
        <img src="/logo.png" alt="FitStride Logo">
        <nav>
            <a href="/auth/dashboard">Home</a>
            <a href="/suggestedplan">Suggested Plan</a>
            <a href="/logaworkoutsession">Log a Workout Session</a>
            <a href="/logdailyactivity">Log Daily Activity</a>
            <a href="/auth/progress">Progress</a>
            <a href="/auth/history">History</a>
            <a href="/auth/checkGoalStatus" style="color: white; background-color: #0a0505; padding: 5px 10px; border-radius: 7px;">Fitness Goals</a>
        </nav>
    </div>
</header>
<h1>ACHIEVE YOUR BEST</h1>
<p style="font-weight: 700; font-size: 18px;  margin-bottom: 10px;">Stay on target with a weekly goal</p>
<!-- Form Section -->
<div class="form-container">
    <form action="/auth/fitnessgoals" method="POST">
        {{#if message}}
            <div class="message-container">
                <h4 class="error-message">{{message}}</h4>
            </div>
        {{/if}}
        <label for="activity">Activity</label>
        <select name="activity" id="activity" class="input-activity" name="activity" required>
            <option value="" disabled selected>Enter activity</option>
            <option value="run">
                Run
            </option>
            <option value="walk">
                Walk
            </option>
            <option value="cycle">
                Cycle
            </option>
        </select>

        <label for="goaltype">Goal Type</label>
        <input type="number" id="goaltype" placeholder="Distance in meters" name="steps_goals" required min="1" step="1">

        <label for="goaltarget">Goal Target</label>
        <input type="number" id="goaltarget" placeholder="Enter calories to burn" name="calories_goals" required min="1" step="1">

        <label for="waterintake">Water Intake</label>
        <input type="text" id="waterintake" placeholder="Amount of Water in litres" name="water_goals" required>
        <button>Save</button>
    </form>
</div>
</body>
</html>