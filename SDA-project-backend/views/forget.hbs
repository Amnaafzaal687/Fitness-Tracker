<style> 
    /* Reset and General Styling */
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: Roboto, sans-serif;
    }
    body {
        background-color: #f5f5f5;
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        flex-direction: column;
    }
    body h1 {
        margin-top: 10px; /* Adjusted for fixed header */
        text-align: center;
        padding: 20px;
        color: #333;
    }

    /* Form Container Styling */
    .form-container {
        width: 417px;
        background-color: #EBC1A9; /* Background color as per screenshot */
        padding: 50px;
        border-radius: 5px;
        text-align: center;
    }

    .form-container label {
        display: block;
        text-align: left;
        margin: 15px 0 5px;
        color: #555;
    }

    .form-container input {
        width: 100%;
        padding: 10px;
        margin-bottom: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
    }

    .form-container button {
        padding: 10px 20px;
        background-color: black; /* Button background as black */
        color: white;
        font-weight: bold;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        width: 100%;
        margin-top: 20px;
        font-size: 16px;
    }

    .form-container button:hover {
        background-color: #555;
    }

    .message-container {
    margin-bottom: 20px;
    text-align: center;
    }

    .error-message {
        color: red;
        font-size: 18px;
        font-weight: bold;
        margin: 10px 0;
        padding: 10px;
        background-color: #ffe6e6; /* Light red background */
        border: 1px solid red;    /* Red border */
        border-radius: 5px;
    }

</style>
<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Forget Password</title>
</head>
<body>
<!-- Header Section -->

<h1>Forget Password</h1>
<!-- Form Section -->
<div class="form-container">
    {{#if message}}
        <div class="error-message">{{message}}</div>
    {{/if}}
    <form action="/auth/forget" method="POST">
        <label for="name">Username</label>
        <input type="text" id="name" placeholder="Enter username" name="name" required>  
        <label for="password">New Password</label>
        <input type="password" placeholder="Enter password" class="input-password" name = "password" required>
        <button>Reset Password</button>
    </form>
</div>
</body>
</html>
