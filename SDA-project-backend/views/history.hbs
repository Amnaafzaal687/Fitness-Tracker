<style> 
    /* Reset and General Styling */
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: Roboto, sans-serif;
    }
    body {
        background-color: #f5f5f5;
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        flex-direction: column;
    }

    /* Header Styling */
    header {
        width: 100%;
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 20px 50px;
        background-color: white;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        position: fixed;
        top: 0;
        left: 0;
        z-index: 1000;
    }
    .logo {
        display: flex;
        align-items: center;
    }
    .logo img {
        height: 50px;
        margin-right: 10px;
    }
    nav {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
    }
    nav a {
        font-size: 16px;
        margin: 0 15px;
        text-decoration: none;
        color: black;
        font-weight: 400;
        border: 1px solid rgb(129, 117, 117);
        border-radius: 7px;
        padding: 5px 10px;
    }
    nav a:hover {
        color: #2046cf;
    }

    .title {
        
        font-size: 30px;
        font-weight: bold;
        text-align: center;
        margin-top: 30px;
        
    }

    .history-table {
        margin-left: 25px;
        width: 95%; /* Adjust table width */
        border-collapse: collapse;
        margin-top: 30px;
        background-color: white;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .history-table th, .history-table td {
        text-align: center;
        border: 1px solid #ddd;
        padding: 15px 60px;
    }

    .history-table th {
        background-color: #EBC1A9;
        font-weight: bold;
    }

    .history-table tr:nth-child(even) {
        background-color: #f9f9f9;
    }
    main {
        
       
        width: 80%;
    }
    
</style>
<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>History</title>
</head>
<body>
<!-- Header Section -->
    <header>
        <div class="logo">
            <img src="/logo.png" alt="FitStride Logo">
            <nav>
                <a href="/dashboard">Home</a>
                <a href="/suggestedplan"">Suggested Plan</a>
                <a href="/logaworkoutsession">Log a Workout Session</a>
                <a href="/logdailyactivity">Log Daily Activity</a>
                <a href="/progress">Progress</a>
                <a href="/history" style="color: white; background-color: #0a0505; padding: 5px 10px; border-radius: 7px;">History</a>
                <a href="/fitnessgoals">Fitness Goals</a>
            </nav>
        </div>
    </header>
    <!-- Main Content -->
<main>
    <div class="title">Workout History</div>
    <table class="history-table" >
        <thead>
            <tr>
                <th>Workout Name</th>
                <th>Duration</th>
                <th>No of Sets</th>
                <th>Date</th>
            </tr>
        </thead>
        <tbody id="workout-history">
            <!-- Rows will be dynamically inserted here -->
        </tbody>
    </table>
</main>

<script>
    // Example: Fetch workout data from the backend (or use dummy data)
    const workoutData = [
        { name: "Bicep Curls", duration: "15 mins", sets: "4 x 12", date: "22/05/2022" },
        { name: "Push ups", duration: "20 mins", sets: "50", date: "15/06/2022" },
        { name: "Leg Press", duration: "30 mins", sets: "3 x 10", date: "15/06/2022" },
        { name: "Chest Press", duration: "5 mins", sets: "2 x 5", date: "06/09/2022" },
        { name: "Pull ups", duration: "10 mins", sets: "4 x 10", date: "04/10/2022" }
    ];

    const tableBody = document.getElementById("workout-history");

    // Populate the table dynamically
    workoutData.forEach((workout) => {
        const row = document.createElement("tr");
        row.innerHTML = `
            <td>${workout.name}</td>
            <td>${workout.duration}</td>
            <td>${workout.sets}</td>
            <td>${workout.date}</td>
        `;
        tableBody.appendChild(row);
    });
</script>
</body>
</html>